{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "lib": ["es6"],
    "declaration": true,
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDeclarationOnly": true,
    "outDir": "lib",
    "rootDir": ".",
    "allowImportingTsExtensions": true
  }
}
